[Unit]
Description=Restic Retention + Prune
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
User=root
Group=root
ExecStart=/usr/local/bin/restic-prune.sh

NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=true
ReadWritePaths=/var/backups/restic

[Install]
WantedBy=multi-user.target
